<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape>
        <stroke
            android:width="2dip"
            android:color="@color/colorWhite"
            />
        <corners android:radius="30dp"/>
        <padding
            android:bottom="10dp"
            android:left="10dp"
            android:right="10dp"
            android:top="10dp"
            />
    </shape>
</item>
<item
    android:state_pressed="true">
    <shape>
        <stroke
            android:width="2dip"
            android:color="@color/colorAccent"
            />
        <corners android:radius="30dp"/>
        <padding
            android:bottom="10dp"
            android:left="10dp"
            android:right="10dp"
            android:top="10dp"
            />
    </shape>
</item>
</selector>