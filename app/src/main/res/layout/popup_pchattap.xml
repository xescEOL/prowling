<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_element"
    android:layout_width="240dp"
    android:layout_height="400dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:background="@drawable/custom_borderimage"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNamePop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="Nombre"
            android:textAlignment="center"
            android:textColor="@color/browser_actions_title_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtMsgPop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="Loriem apsum dsa das dsa dasd ajkh djkashd jkash jkhdsjka hjkash jkdhaskj dhkasj hdhas jdah kjdhajk hdajk hkdjahs djka hsjkdash jkdh"
            android:textAlignment="center"
            android:textColor="@color/browser_actions_title_color"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnMencionarPop"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorPrimaryDark"
            android:text="MENCIONAR"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnPrivatePop"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorPrimaryDark"
            android:text="ENVIAR PRIVAT"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnProfilePop"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorPrimaryDark"
            android:text="VEURE PERFIL"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnClose"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/cardview_shadow_start_color"
            android:text="TANCAR"
            android:textAlignment="center"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtReportar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Reportar"
            android:textAlignment="center"
            android:textColor="@color/fui_bgEmail"
            android:textSize="12sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgPerfilPop"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:background="@color/fui_transparent"
        android:src="@color/browser_actions_bg_grey"
        app:srcCompat="@color/browser_actions_bg_grey" />

</RelativeLayout>